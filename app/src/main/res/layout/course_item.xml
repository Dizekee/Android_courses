<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/nav_bg">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp">

                <ImageView
                    android:id="@+id/course_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/java_dev"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:layout_marginEnd="10dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/bookmark_2"
                        tools:ignore="TouchTargetSizeCheck" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/blur"
                            android:layout_gravity="bottom|start">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="10dp"
                                android:layout_height="9.58dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/star" />

                            <TextView
                                android:id="@+id/rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:text="4.9"
                                android:textColor="@color/text_color"
                                android:textSize="12dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="45dp"
                            android:background="@drawable/blur"
                            android:layout_gravity="bottom|start"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:text="22 Мая 2024"
                                android:textColor="@color/text_color"
                                android:textSize="12dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                    </FrameLayout>

                </FrameLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Java-разработчик с нуля"
                android:textColor="@color/text_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.7"
                android:fontFamily="@font/roboto"
                android:text="Освойте backend-разработку и программирование на Java, фреимворки..."
                android:textColor="@color/text_color"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="999 P"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/more_detailed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/roboto"
                    android:text="Подробнее"
                    android:textColor="@color/green_200" />

                <ImageButton
                    android:id="@+id/button_strl"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="13.5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@color/nav_bg"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/strel2"
                    tools:ignore="TouchTargetSizeCheck" />

            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>